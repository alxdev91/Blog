@model Blog.ViewModels.PostViewModel

@{
    ViewBag.Title = "AddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>NUEVO POST</h2>

    @using (Html.BeginForm("AddEdit", "PostB"))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Post.Title)
            @Html.TextBoxFor(m => m.Post.Title, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Post.Title)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Post.Category)
            @Html.DropDownListFor(m => m.Post.Category, new SelectList(Model.Categories, "Name"), new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Post.Category)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Post.Comments)
            @Html.TextAreaFor(m => m.Post.Comments, new { @class = "form-comtrol" })
            @Html.ValidationMessageFor(m => m.Post.Comments)
        </div>

        <input type="submit" value="Publicar" />
    }
</div>